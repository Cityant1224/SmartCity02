<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_housedetial_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


<!--        售价-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/price_housedetial_item"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="16262"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="售价"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>


<!--面积-->

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mianji_housedetial_item"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="52"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="面积"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>


<!--房源类型-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/type_housedetial_item"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="二手"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="房源类型"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<!--        标题-->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/title_housedetial_item"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="泉水B6"
                android:textSize="15dp"
                android:textColor="@color/black"/>
        </LinearLayout>


<!--地址-->
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/address_housedetial_item"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="泉水B6区"
                android:textSize="15dp"
                android:textColor="@color/black"/>
        </LinearLayout>


<!--电话-->

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/phone_housedetial_item"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18546110110"
                android:textSize="15dp"
                android:textColor="@color/black"/>
        </LinearLayout>


<!--详情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginBottom="20dp"
                android:id="@+id/detial_housedetial_item"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="房主现在比较着急"
                android:textSize="15dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>