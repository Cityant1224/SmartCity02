<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.HousedetialActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui_housedetial"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="房源详情"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>


        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/takeawaysearchbackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gengduo_housedetial"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@mipmap/gengduo" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shuxian"/>
            <ImageView
                android:id="@+id/guanbi_housedetial"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/guanbi"/>
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_housedetial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>