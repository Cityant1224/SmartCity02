<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".activity.DashujvyiliaoActivity">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/dashujv_fanhui"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/fanhui"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dashujv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大数据+医疗卫生"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="行业"
                android:textColor="@color/white"
                android:background="@color/blue"/>
            <TextView
                android:id="@+id/dashujv_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="2021-05-08  13:59:44"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dashujv_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/neirong_dashujv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="123"
            android:textColor="@color/gray2"
            android:textSize="18dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/pinglun_dashujv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="写评论"
            android:textColorHint="@color/black"/>
        <Button
            android:id="@+id/fabiao_dashujv"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发表"
            android:textColor="@color/white"
            android:background="@color/red"/>
    </LinearLayout>


</LinearLayout>