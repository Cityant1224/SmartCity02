<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.MoviedetialActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/fanhui_moviedetial"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fanhui"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="电影详情"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/takeawaysearchbackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gengduo_moviedetial"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@mipmap/gengduo" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shuxian"/>
            <ImageView
                android:id="@+id/guanbi_moviedetial"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/guanbi"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moviedetial_item"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/xiangkan_btn_moviedetial"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@color/glod"
                android:textColor="@color/black"
                android:text="想看"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/kanguo_btn_moviedetial"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@color/glod"
                android:textColor="@color/black"
                android:text="看过"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movieotherdetial_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_buybtn_reyingmovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即购票"
            android:background="@color/red"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
    </LinearLayout>



</LinearLayout>