<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.GrainchengchekainformationActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="领取乘车卡"
        android:textSize="30dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"/>

<!--    身份证-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="身份证"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/shenfenzheng_chengcheka"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@color/gray"
            android:textColor="@color/black"/>
    </LinearLayout>

<!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/shoujihao_chengcheka"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@color/gray"
            android:textColor="@color/black"/>
    </LinearLayout>


<!--    姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/xingming_chengcheka"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@color/gray"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_chengcheka"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:textColor="@color/blue"
            android:text="取消"/>

        <Button
            android:id="@+id/sure_chengcheka"
            android:layout_weight="1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:textColor="@color/blue"
            android:text="确定"/>

    </LinearLayout>


</LinearLayout>