<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.HuodongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@color/blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="活动"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.youth.banner.Banner
            android:id="@+id/banner_hd"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_hd"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>


    <!--    底部导航栏-->
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <!--        首页-->
        <LinearLayout
            android:id="@+id/shouye_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/shouye"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="首页"
                android:gravity="center"/>
        </LinearLayout>

        <!--        服务-->
        <LinearLayout
            android:id="@+id/fuwu_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/service"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="服务"
                android:gravity="center"/>
        </LinearLayout>

        <!--        新闻-->
        <LinearLayout
            android:id="@+id/xinwen_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/news"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="新闻"
                android:gravity="center"/>
        </LinearLayout>

        <!--        活动-->
        <LinearLayout
            android:id="@+id/huodong_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/huodong"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="活动"
                android:gravity="center"/>
        </LinearLayout>

        <!--        个人-->
        <LinearLayout
            android:id="@+id/geren_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/geren"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="个人"
                android:gravity="center"/>
        </LinearLayout>

</LinearLayout>
    </LinearLayout>